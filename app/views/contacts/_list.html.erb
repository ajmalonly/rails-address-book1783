<div class="list-group" data-controller="contacts-list">
  <% contacts.each do |contact| %>
    <%= link_to contact.full_name, contact,
    class: "#{'active' if contact == selected_contact} list-group-item list-group-item-action",
    data: { turbo_frame: :contact_details, 
            turbo_action: :advance,
            action: "click->contacts-list#highlight",
            contacts_list_target: "contact" } %>
  <% end %>
</div>